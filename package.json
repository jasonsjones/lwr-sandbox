{
    "name": "lwr-sandbox",
    "version": "0.0.1",
    "license": "MIT",
    "private": true,
    "scripts": {
        "build:css": "postcss src/styles/styles.css -o src/assets/styles/twcompiled.css",
        "build:utam": "utam -c utam.config.js",
        "clean": "rm -rf __lwr_cache__ src/modules/orion_labs/userApi/generated",
        "lint": "eslint '**/*.{js,ts}' --max-warnings 0",
        "format": "prettier --write '**/*.{js,ts,json,md}'",
        "dev": "ts-node-dev --respawn --transpile-only src/server/index.ts",
        "generate:adapters": "luvio generate src/raml/luvio.raml src/modules/orion_labs/userApi/generated",
        "start": "MODE=prod node scripts/start-server.mjs",
        "start:amd": "MODE=compat node scripts/start-server.mjs",
        "test:e2e": "wdio",
        "test:unit": "jest"
    },
    "dependencies": {
        "@luvio/engine": "0.60.0",
        "@luvio/lwc-luvio": "0.60.0",
        "dotenv": "10.0.0",
        "lwc": "2.5.10",
        "lwr": "0.5.11",
        "passport": "0.5.0",
        "passport-forcedotcom": "0.1.5",
        "uuid": "8.3.2"
    },
    "engines": {
        "node": ">=14.15.4 <15"
    },
    "devDependencies": {
        "@luvio/cli": "0.60.0",
        "@luvio/compiler": "0.60.0",
        "@lwc/jest-preset": "11.2.1",
        "@types/dotenv": "8.2.0",
        "@types/jest": "27.0.2",
        "@types/mocha": "9.0.0",
        "@types/passport": "1.0.7",
        "@types/uuid": "8.3.1",
        "@typescript-eslint/eslint-plugin": "5.3.1",
        "@typescript-eslint/parser": "5.3.1",
        "@wdio/cli": "7.16.7",
        "@wdio/local-runner": "7.16.7",
        "@wdio/mocha-framework": "7.16.6",
        "@wdio/spec-reporter": "7.16.4",
        "autoprefixer": "10.4.0",
        "chromedriver": "95.0.0",
        "eslint": "8.2.0",
        "eslint-config-prettier": "8.3.0",
        "eslint-plugin-prettier": "4.0.0",
        "jest": "27.3.1",
        "postcss": "8.3.11",
        "postcss-cli": "9.0.2",
        "prettier": "2.4.1",
        "tailwindcss": "2.2.19",
        "ts-node": "10.4.0",
        "ts-node-dev": "1.1.8",
        "typescript": "4.4.4",
        "wdio-chromedriver-service": "^7.2.2",
        "wdio-utam-service": "0.0.10"
    },
    "jest": {
        "preset": "@lwc/jest-preset",
        "moduleNameMapper": {
            "^orion_labs/(.+)$": "<rootDir>/src/modules/orion_labs/$1/$1",
            "^lwr/(.+)$": "<rootDir>/jest_modules/lwr/$1/$1"
        }
    }
}
