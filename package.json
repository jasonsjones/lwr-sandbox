{
    "name": "lwr-sandbox",
    "version": "0.0.1",
    "license": "MIT",
    "private": true,
    "scripts": {
        "build": "yarn build:css && yarn generate:adapters && yarn build:utam",
        "build:css": "tailwindcss -i src/styles/styles.css -o src/assets/styles/tailwind.css",
        "build:utam": "utam -c utam.config.js",
        "clean": "yarn clean:adapters && yarn clean:css && yarn clean:utam",
        "clean:adapters": "rm -rf __lwr_cache__ src/modules/orion_labs/userApi/generated",
        "clean:css": "rm -rf src/assets/styles/tailwind.css",
        "clean:utam": "rm -rf pageObjects",
        "lint": "eslint '**/*.{js,ts}' --max-warnings 0",
        "format": "prettier --write '**/*.{js,ts,json,md}'",
        "dev": "yarn watch:server & yarn watch:css",
        "generate:adapters": "luvio generate src/raml/luvio.raml src/modules/orion_labs/userApi/generated",
        "prepare": "yarn build",
        "start": "MODE=prod node scripts/start-server.mjs",
        "start:amd": "MODE=compat node scripts/start-server.mjs",
        "test:e2e": "wdio",
        "test:unit": "jest",
        "watch:css": "yarn build:css --watch",
        "watch:server": "ts-node-dev --respawn --transpile-only src/server/index.ts"
    },
    "dependencies": {
        "@luvio/engine": "0.63.1",
        "@luvio/lwc-luvio": "0.63.1",
        "dotenv": "10.0.0",
        "lwc": "2.7.0",
        "lwr": "0.5.11",
        "passport": "0.5.2",
        "passport-forcedotcom": "0.1.5",
        "uuid": "8.3.2"
    },
    "devDependencies": {
        "@luvio/cli": "0.63.1",
        "@luvio/compiler": "0.63.1",
        "@lwc/jest-preset": "11.2.2",
        "@types/jest": "27.0.3",
        "@types/mocha": "9.0.0",
        "@types/passport": "1.0.7",
        "@types/uuid": "8.3.3",
        "@typescript-eslint/eslint-plugin": "5.8.1",
        "@typescript-eslint/parser": "5.8.1",
        "@wdio/cli": "7.16.12",
        "@wdio/local-runner": "7.16.12",
        "@wdio/mocha-framework": "7.16.11",
        "@wdio/spec-reporter": "7.16.11",
        "chromedriver": "96.0.0",
        "eslint": "8.5.0",
        "eslint-config-prettier": "8.3.0",
        "eslint-plugin-prettier": "4.0.0",
        "jest": "27.4.5",
        "prettier": "2.5.1",
        "tailwindcss": "3.0.7",
        "ts-node": "10.4.0",
        "ts-node-dev": "1.1.8",
        "typescript": "4.5.4",
        "wdio-chromedriver-service": "7.2.2",
        "wdio-utam-service": "1.0.0"
    },
    "jest": {
        "preset": "@lwc/jest-preset",
        "moduleNameMapper": {
            "^orion_labs/(.+)$": "<rootDir>/src/modules/orion_labs/$1/$1",
            "^lwr/(.+)$": "<rootDir>/jest_modules/lwr/$1/$1"
        },
        "coverageDirectory": "./coverage/jest/",
        "coveragePathIgnorePatterns": [
            "/node_modules/",
            ".html",
            "/__tests__/",
            "/jest_modules/"
        ]
    },
    "engines": {
        "node": ">=16 <18"
    }
}

