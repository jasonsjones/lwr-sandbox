{
    "name": "lwr-sandbox",
    "version": "0.0.1",
    "license": "MIT",
    "private": true,
    "scripts": {
        "build:css": "postcss src/styles/styles.css -o src/assets/styles/twcompiled.css",
        "clean": "rm -rf __lwr_cache__",
        "lint": "eslint '**/*.{js,ts}' --max-warnings 0",
        "format": "prettier --write '**/*.{js,ts,json,md}'",
        "dev": "ts-node-dev --respawn --transpile-only src/server/index.ts",
        "start": "MODE=prod node scripts/start-server.mjs",
        "start:amd": "MODE=compat node scripts/start-server.mjs"
    },
    "dependencies": {
        "lwc": "2.5.1",
        "lwr": "0.5.4",
        "uuid": "8.3.2"
    },
    "engines": {
        "node": ">=14.15.4 <15"
    },
    "devDependencies": {
        "@types/uuid": "8.3.1",
        "@typescript-eslint/eslint-plugin": "4.33.0",
        "@typescript-eslint/parser": "4.33.0",
        "autoprefixer": "10.3.7",
        "eslint": "7.32.0",
        "eslint-config-prettier": "8.3.0",
        "eslint-plugin-prettier": "4.0.0",
        "postcss": "8.3.9",
        "postcss-cli": "9.0.1",
        "prettier": "2.4.1",
        "tailwindcss": "2.2.16",
        "ts-node-dev": "1.1.8",
        "typescript": "4.4.3"
    }
}
